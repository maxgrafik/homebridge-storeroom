{
    "pluginAlias": "Storeroom",
    "pluginType": "platform",
    "singular": true,
    "headerDisplay": "Storeroom for Homebridge Setup",
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "title": "Storeroom",
                "default": "Storeroom"
            },
            "serverPort": {
                "type": "number",
                "title": "Port",
                "default": 8080
            },
            "serverSecret": {
                "type": "string",
                "title": "Secret"
            }
        }
    },
    "form": [
        {
            "type": "fieldset",
            "title": "Server",
            "expandable": false,
            "items": [
                {
                    "type": "flex",
                    "flex-flow": "row wrap",
                    "items": [
                        "serverPort",
                        "serverSecret"
                    ]
                }
            ]
        }
    ]
}
