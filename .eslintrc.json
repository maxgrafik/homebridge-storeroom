{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-unused-vars": "warn",
        "eqeqeq": "warn",
        "no-var": "warn",
        "prefer-const": "warn",
        "comma-dangle": ["warn", "only-multiline"],
        "indent": ["error", 4],
        "quotes": ["error", "double", { "avoidEscape": true }],
        "semi": ["error", "always"]
    }
}
